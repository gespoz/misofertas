@model MisOfertas.Web.Models.LoginViewModel
@{
    ViewBag.Title = "Iniciar sesión";
}
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<html>
<head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <!------ Include the above in your HEAD tag ---------->
</head>
<body id="LoginForm" class="table-responsive">
    <div class="container table-responsive">
        <h1 class="form-heading">login Form</h1>
        <div class="login-form">
            <div class="main-div">
                <div class="form-group">
                    <img class="text-center" src="~/Images/bbar.png" width="300" height="70"/>
                    @Html.Label("Porfavor Ingrese su Usuario y Contraseña")
                </div>
                @using (Html.BeginForm("Autherize", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <form id="Login">
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.User, new { @class = "form-control", id = "inputEmail", placeholder = "Username", @maxlength = "25" })
                            @Html.ValidationMessageFor(m => m.User, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(m => m.Pass, new { @class = "form-control", id = "inputPassword", placeholder = "Password", @maxlength = "45" })
                            @Html.ValidationMessageFor(m => m.Pass, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group forgot">
                            @Html.DisplayFor(m => m.LoginErrorMessage, new { @class = "col-md-4 control-label field-validation-error" })
                            @Html.ActionLink("Registrarse", "Register")
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</body>
</html>

